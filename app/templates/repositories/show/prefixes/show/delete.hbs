{{#if this.model}}
  <div class="panel panel-transparent" id="delete-prefix-form">
    <div class="panel-body">    
      <div class="col-md-9 col-md-offset-3">
        <div class="alert alert-danger" role="alert">
          Are you sure you want to remove prefix {{this.model.prefix.id}} from this repository?
        </div>
        <div class="panel-footer">
          <div class="btn-toolbar pull-right">
            <button class="btn btn-sm" type="button" {{action "cancelAction"}}>Cancel</button>
            <button id="prefix-delete" class="btn btn-sm btn-fill" type="button" {{action "submitAction"}}>Remove</button>
          </div>
          <div class="clearfix"/>
        </div>
      </div>
    </div>
  </div>
{{else}}
  <BsAlert @dismissible={{false}} @type="warning">
    The prefix was not found.
  </BsAlert>
{{/if}}