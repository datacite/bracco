{{#if this.model}}
  <div class="row">
    <div class="col-md-3">
      {{#if (can 'update prefix' this.model.prefix)}}
        <div class="panel facets add">
          <div class="panel-body">
            {{#if this.model.repository.isActive}}
              <div class="btn-toolbar">
                <div class="btn-group btn-group-sm">
                  <LinkTo
                    @route="repositories.show.prefixes.show.delete"
                    @models={{array this.model.repository.id this.model.prefix.id}}
                    class="btn btn-warning"
                  >
                    <i class="fas fa-pencil-alt"></i>
                    Remove Prefix
                  </LinkTo>
                </div>
              </div>
            {{/if}}
          </div>
        </div>
      {{/if}}
    </div>
    <div class="col-md-9">
      <h2 class="work">
        {{this.model.prefix.id}}
      </h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <RepositorySidebar @model={{this.model}} />
    </div>
    <div class="col-md-9">
      <div class="panel panel-transparent">
        <div class="panel-body"></div>
      </div>
    </div>
  </div>
{{else}}
  <BsAlert @dismissible={{false}} @type="warning">
    The prefix was not found.
  </BsAlert>
{{/if}}