  <div class="panel panel-transparent">
    <div class="panel-body">
      <div class="col-md-9 col-md-offset-3">
        <h3 class="edit">Set Password</h3>

        <span class="help-block">Click <a class="action-link" {{action "generate"}} data-test-password-suggestion>here</a> for a password suggestion.</span>
      </div>

      <BsForm @formLayout="horizontal" @horizontalLabelGridClass="col-md-3" @model={{model}} @onSubmit={{action "submit"}} @submitOnEnter={{true}} as |form|>
        <form.element @controlType="password" @property="passwordInput" @label="New Password" as |el| >
          <el.control id="password-input-field" />
        </form.element>
        <form.element @controlType="password" @property="confirmPasswordInput" @label="Confirm Password" as |el| >
          <el.control id="confirm-password-input-field" />
        </form.element>
        <div class="col-md-9 col-md-offset-3">
          <button type="submit" class="btn btn-sm btn-fill">Set Password</button>
          <button {{action "cancel" model}} class="btn btn-sm" id="cancel">Cancel</button>
        </div>
      </BsForm>
    </div>
  </div>
  