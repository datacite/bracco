              </LinkTo>
              <div class="facet-title">
                {{humanize (underscore model.query.resource-type-id)}}
              </div>
              <span class="number pull-right">
                0
              </span>
              <div class="clearfix"></div>
            </li>
          {{/if}}
        </ul>
      </div>
    </div>
  {{/if}}
  {{#if isResearcherProfile}}
