                  </LinkTo>
                {{/if}}
                <div class="facet-title">
                  {{resourceType.title}}
                </div>
                <span class="number pull-right">
                  {{format-number resourceType.count}}
                </span>
                <div class="clearfix"></div>
              </li>
            {{/each}}
          {{else}}
            <li>
              <LinkTo @route={{link}} @query={{hash resource-type-id=''}}>
