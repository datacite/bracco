<div class="form-group {{if (v-get model 'publisher.name' 'isInvalid') 'has-error' 'has-feedback'}}">
  <label class="control-label col-md-3">Publisher</label>
  <div class="col-md-9 input-fragment" data-test-doi-publisher>
    <div class="label-vertical">The name of the entity that holds, archives, publishes prints, distributes, releases, issues, or produces the resource.</div>
    <@form.element @controlType="power-select" @value={{fragment.name}} @options={{organizations}} as |el| >
      <el.control
        @onChange={{action "selectRor"}}
        @search={{action "searchRor"}}
        @placeholder="Select publisher"
        @searchPlaceholder="Type to search..."
        @allowClear={{true}}
        @disabled={{disabled}}
        @searchEnabled={{true}}
        @onKeydown={{ action "createOnEnter" }}
        @noMatchesMessage="Press ENTER to use own publisher."
      as |item|>
          {{if item.name item.name fragment.name}}
        </el.control>
    </@form.element>
  </div>
</div>

<div class="form-group required-nested-label {{if (v-get model 'publisher.publisherIdentifier' 'isInvalid') 'has-error' 'has-feedback'}}">
  <div class="col-md-9 col-md-offset-3 input-fragment">
    <div class="label-vertical">Publisher identifier</div>
    <@form.element oninput={{action 'updatePublisherIdentifier' value='target.value'}} @controlType="text" @value={{fragment.publisherIdentifier}} @helpText="Publisher names and identifiers are provided by the Research Organization Registry (ROR)." as |el| >
      <el.control  placeholder="Publisher identifier" id="publisher-identifier-field" />
    </@form.element>
  </div>
</div>
