<div style="display: inline-block; width: 100%;">
<BsDropdown as |dd|>
  <BsButton class="btn-warning" @onClick={{action "createDoi"}} id="omnipresent-new-doi" title='Create DOI Using Form'>
    <i class="fas fa-edit"></i>Create DOI
  </BsButton>
  <dd.button class="btn-warning"><span class="caret caret-point"></span></dd.button>
  <dd.menu as |ddm|>
    <ddm.item>
      <ddm.linkTo @route="repositories.show.dois.new" @id="omnipresent-secondary-new-doi"><i class="fab fa-wpforms"></i> DOI Form</ddm.linkTo>
    </ddm.item>
    <ddm.item>
      <ddm.linkTo @route="repositories.show.dois.upload" @id="omnipresent-upload-doi"><i class="fas fa-upload"></i> File Upload</ddm.linkTo>
    </ddm.item>
  </dd.menu>
</BsDropdown>
</div>
