{{#if (can 'read index')}}
  <ApplicationHeader @default={{true}} />
  <div class="container-fluid">
    <IndexHeader />
    {{!-- {{#if (can "read messages" model)}} --}}
    <div class="row">
      <div class="col-md-9" style="margin-left: 10px; margin-right: 10px;">
        {{#each this.flashMessages.queue as |flash|}}
          <FlashMessage @flash={{flash}} />
        {{/each}}
      </div>
    </div>
    {{!-- {{/if}} --}}
    {{#if this.model}}
      <DoiList @model={{this.model}} @link="dois" @searchable={{true}} />
    {{else}}
      <div class="col-md-9 col-md-offset-3">
        <BsAlert @dismissible={{false}} @type="warning">
          An error occured fetching DOIs. Please contact DataCite Support.
        </BsAlert>
      </div>
    {{/if}}
  </div>
{{else}}
  <ApplicationHeader /><LandingPage />
{{/if}}