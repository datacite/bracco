<div class="panel panel-transparent">
  <div class="panel-body">
    <div class="col-md-9 col-md-offset-3">
      <BsForm
        @formLayout="vertical"
        @model={{this.model}}
        @onSubmit={{action 'submitAction'}}
        @submitOnEnter={{true}} as |form|
      >
        <div class="form-group">
          <label class="control-label">
            Are you sure you want to delete this contact? This action cannot be undone.
          </label>
          <form.element
            @controlType="text"
            id="confirm-delete"
            @property="confirmDelete"
            @showValidationOn="input"
            @helpText="Please type 'Delete' to confirm." as |el|
          >
            <el.control id="confirm-delete-field" autofocus={{true}} />
          </form.element>
        </div>
        <div class="pseudo-footer">
          <div class="btn-toolbar pull-right">
            <button id="cancel" class="btn btn-sm" type="button" {{action 'cancelAction'}}>
              Cancel
            </button>
            <button
              disabled={{v-get this.model 'confirmDelete' 'isInvalid'}}
              id="delete"
              class="btn btn-sm btn-fill" type="button" {{action 'submitAction'}}
            >
              Delete
            </button>
          </div>
          <div class="clearfix"></div>
        </div>
      </BsForm>
    </div>
  </div>
</div>