{{#if (can 'write index')}}
  <ApplicationHeader @default={{true}} />
  <div class="container-fluid">
    <IndexHeader />
    <div class="content">
      <div class="panel panel-transparent">
        <div class="panel-body">
          <div class="col-md-9 col-md-offset-3">
            <h3 class="edit">
              Set Password
            </h3>
          </div>
          <div class="col-md-9 col-md-offset-3">
            <span class="help-block">
              Click
              <a
                class="action-link"
                data-test-password-suggestion
                {{action 'generate'}}
              >
                here
              </a>
              for a password suggestion.
            </span>
          </div>
          <BsForm
            @formLayout="horizontal"
            @horizontalLabelGridClass="col-md-3"
            @model={{this.model}}
            @onSubmit={{action 'submit' this.model}}
            @submitOnEnter={{true}} as |form|
          >
            <form.element
              @controlType="text"
              @id="password-input"
              @property="passwordInput"
              @label="New Password"
            />
            <form.element
              @controlType="text"
              @id="confirm-password-input"
              @property="confirmPasswordInput"
              @label="Confirm Password"
            />
            <div class="col-md-9 col-md-offset-3">
              <div class="btn-toolbar">
                <button type="submit" class="btn btn-sm btn-fill">
                  Set Password
                </button>
                <button
                  class="btn btn-sm"
                  id="cancel"
                  {{action 'cancel' this.model}}
                >
                  Cancel
                </button>
              </div>
            </div>
          </BsForm>
        </div>
      </div>
    </div>
  </div>
{{else}}
  <ApplicationHeader /><LandingPage />
{{/if}}