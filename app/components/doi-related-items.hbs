<div class="form-group">
  <label class="control-label col-md-3" data-test-related-items>Related Items</label>
  <div class="col-md-9">
    <div class="label-vertical">Related Items.</div>
    {{#if this.showRelatedItems}}
      {{#each this.model.relatedItems as |relatedItem index|}}
        <DoiRelatedItem @model={{this.model}} @fragment={{relatedItem}} @form={{this.form}} @index={{index}} />
      {{/each}}

      {{#if (lte this.model.relatedItems.length 24)}}
        <BsButton id="add-related-item" class="btn-sm btn-warning" @outline={{true}} @onClick={{action "addRelatedItem"}}><i class="fas fa-plus"></i> Add {{if (gt this.model.relatedItems.length 0) "another "}} related item</BsButton>
      {{/if}}

      {{#if (gt this.model.relatedItems.length 0)}}
        <BsButton id="toggle-related-items" class="btn-sm btn-warning" @outline={{true}} @onClick={{action "toggleRelatedItems"}}><i class="fas fa-eye-slash"></i> Hide {{pluralize this.model.relatedItems.length 'related item'}}</BsButton>
      {{/if}}
    {{else}}
      {{#if (gt this.model.relatedItems.length 0)}}
        <BsButton id="toggle-related-items" class="btn-sm" @outline={{true}} @onClick={{action "toggleRelatedItems"}}><i class="fas fa-eye"></i> Show {{pluralize this.model.relatedItems.length 'related item'}}</BsButton>
      {{else}}
        <BsButton class="btn-sm btn-warning" id="add-related-item" @outline={{true}} @onClick={{action "addRelatedItem"}}><i class="fas fa-plus"></i> Add related item</BsButton>
      {{/if}}
    {{/if}}
  </div>
</div>